SELECT * FROM iceberg_catalog.default.employee 
TIMESTAMP AS OF '2025-07-05 14:01:49';

#Rollback to an earlier snapshot (if needed specify the ID you have)

CALL iceberg_catalog.system.rollback_to_snapshot(
  'default.employee', 
  3033299854398411860
);

